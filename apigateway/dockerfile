# Stage 1: Build the application with Maven
FROM maven:3.8.1-openjdk-17 AS builder

# Set the working directory
WORKDIR /app

# Copy the root pom.xml and the apigateway module pom.xml
COPY pom.xml /app/
COPY apigateway/pom.xml /app/apigateway/

# Download dependencies for the apigateway module
RUN mvn -f /app/apigateway/pom.xml dependency:go-offline -B

# Copy the source code of the apigateway module
COPY apigateway/src /app/apigateway/src

# Build the apigateway module
RUN mvn -f /app/apigateway/pom.xml package -DskipTests

# Stage 2: Create the final image
FROM openjdk:17-jre-slim

# Copy the built application from the builder stage
COPY --from=builder /app/apigateway/target/*.jar /app/apigateway.jar

# Set the entry point
ENTRYPOINT ["java", "-jar", "/app/apigateway.jar"]
