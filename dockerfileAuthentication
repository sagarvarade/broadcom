# Stage 1: Build the application with Maven
FROM maven:3.8.1-openjdk-17 AS builder
# Set the working directory
WORKDIR /app

# Copy the root pom.xml and the authentication module pom.xml
COPY pom.xml /app/
COPY authentication/pom.xml /app/authentication/

# Download dependencies for the authentication module
RUN mvn -f /app/authentication/pom.xml dependency:go-offline -B

# Copy the source code of the authentication module
COPY authentication/src /app/authentication/src

# Build the authentication module
RUN mvn -f /app/authentication/pom.xml package -DskipTests

# Stage 2: Create the final image
FROM eclipse-temurin:17-jre-focal

# Copy the built application from the builder stage
COPY --from=builder /app/authentication/target/*.jar /app/authentication.jar

# Set metadata labels
LABEL org.opencontainers.image.name="broadcom-authentication"
LABEL org.opencontainers.image.version="1.0.0"

# Set the entry point
ENTRYPOINT ["java", "-jar", "/app/authentication.jar"]
